@model Topluluk_Duyuru.Models.Admin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container
{
        margin-top:150px;
        width:300px;
        height:300px;
        background:#47D1FF;
}
    </style>
</head>

<body>

    <div class="container" >
        <div align="center"><p><h3>Lütfen Giriş Yapınız...</h3></p> </div>
        
        @ViewBag.Mesaj
        @using (Html.BeginForm("Login", "Admin", FormMethod.Post))
        {
            <div class="form-group col-xs-12">
                <b>Username</b>
                @Html.TextBoxFor(model => model.username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
            </div><br /><br /><br /><br />
            <div class="form-group col-xs-12">
                <b>Password</b>
                @Html.PasswordFor(model => model.password, new { @class = "form-control", placeholder = "Şifre" })
            </div><br /><br /><br /><br />
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-block btn-success">Sign in</button>

            </div>
        }
    </div>
</body>
</html>
